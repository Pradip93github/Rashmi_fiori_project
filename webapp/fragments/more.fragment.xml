<core:FragmentDefinition xmlns:simple="sap.gantt.simple" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
xmlns:core="sap.ui.core"
xmlns:sf="sap.ui.layout.form">
      <VBox class="sapUiSmallMargin">
      <sf:SimpleForm  id="sfId"
      editable="false"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="true"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false">
      <sf:content>
      <core:Title text="Product Data"></core:Title>
      <Label text="Name"></Label>
      <Text text="{NAME}"></Text>     
      <Label text="Type"></Label>
      <Text text="{CATEGORY}"></Text> 
      <Label text="Product"></Label>
      <Text text="{PRODUCT_ID}"></Text>
      <Label text="Supplier"></Label>
      <Text text="{SUPPLIER_ID}-{SUPPLIER_NAME}"></Text>
      <Label text="Price"></Label>
      <Text text="{PRICE}-{CURRENCY_CODE}"></Text>
      <!-- </sf:content> -->
      
     <!-- <sf:content> -->
      <core:Title text="Supplier Details"></core:Title>
      <Label text="City"></Label>
      <Text text="{To_Supplier/CITY}"></Text>     
      <Label text="Street"></Label>
      <Text text="{To_Supplier/STREET}"></Text> 
      <Label text="Country"></Label>
      <Text text="{To_Supplier/COUNTRY}"></Text>
      <Label text="Phone No"></Label>
      <Text text="{To_Supplier/PHONE_NUMBER}"></Text>
      <Label text="Organization"></Label>
      <Text text="{To_Supplier/COMPANY_NAME}"></Text>
      <Label text="Email"></Label>
      <Text text="{To_Supplier/EMAIL_ADDRESS}"></Text>
      </sf:content>
      </sf:SimpleForm>
      </VBox>

</core:FragmentDefinition>